<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/dialog_edit_job_title_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:textSize="18sp"
            android:textColor="@color/darkGrey"
            android:textStyle="bold"
            android:text="@string/title"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"
                android:layout_marginEnd="16dp"
                android:textSize="16sp"
                android:text="@string/company"/>

            <EditText
                android:id="@+id/dialog_edit_job_company_edittext"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp"
                />

        </LinearLayout>

        <android.support.v7.widget.AppCompatSpinner
            android:id="@+id/dialog_edit_job_positions_dropdown"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:popupElevation="2dp">

        </android.support.v7.widget.AppCompatSpinner>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="12dp"
            android:textSize="14sp"
            android:textColor="@color/grey"
            android:text="@string/description"/>

        <EditText
            android:id="@+id/dialog_edit_job_since_date_edittext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:textColor="@color/colorPrimary"
            android:textColorHint="@color/colorPrimary"
            android:background="@color/white"
            android:textSize="16sp"
            android:hint="@string/since"
            android:focusableInTouchMode="false"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/dialog_edit_job_current_work_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="24dp"
                android:layout_marginEnd="24dp"
                android:text="@string/current_work"
                android:checked="false"
                style="@style/Theme.AppCompat.Dialog"
                />

            <EditText
                android:id="@+id/dialog_edit_job_until_date_edittext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="date"
                android:textColor="@color/colorPrimary"
                android:textColorHint="@color/colorPrimary"
                android:background="@color/white"
                android:textSize="16sp"
                android:hint="@string/until"
                android:focusableInTouchMode="false"/>
            
        </LinearLayout>
        


    </LinearLayout>

</FrameLayout>
