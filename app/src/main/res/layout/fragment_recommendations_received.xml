<FrameLayout
    android:id="@+id/fragment_recommendations_received_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/fragment_recommendations_received_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ListView android:id="@+id/fragment_recommendations_received_listview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                xmlns:android="http://schemas.android.com/apk/res/android" />

            <TextView
                android:id="@android:id/empty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textSize="18sp"
                android:textColor="@color/colorPrimary"
                android:text="@string/no_recommendations"
                android:visibility="gone"/>

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/fragment_recommendations_received_add_recommendation_fab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_margin="@dimen/fab_margin"
                android:src="@android:drawable/ic_input_add"
                android:tint="@color/white"
                />

        </RelativeLayout>

        <ProgressBar
            android:id="@+id/fragment_recommendations_received_loading_circular_progress"
            android:theme="@style/CircularProgress"
            style="@style/Widget.AppCompat.ProgressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="gone"/>

    </RelativeLayout>

</FrameLayout>