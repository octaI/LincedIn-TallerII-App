<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/lighterGrey"
    tools:context="com.fiuba.tallerii.lincedin.fragments.UserProfileFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardElevation="2dp"
                android:layout_margin="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <android.support.v4.widget.CircleImageView
                        android:id="@+id/user_profile_picture_circle_imageview"
                        android:layout_width="76dp"
                        android:layout_height="76dp"
                        android:layout_gravity="center"
                        android:padding="1dp"
                        android:layout_marginTop="92dp"
                        android:background="@color/lightGrey" />

                    <TextView
                        android:id="@+id/user_profile_username_textview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginTop="16dp"
                        android:layout_marginRight="24dp"
                        android:layout_marginLeft="24dp"
                        android:textSize="24sp"
                        android:textAlignment="center"
                        android:textColor="@color/colorPrimaryDark"
                        android:textStyle="bold"
                        android:text="@string/user"
                        />

                    <TextView
                        android:id="@+id/user_profile_user_description_textview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginRight="24dp"
                        android:layout_marginLeft="24dp"
                        android:textSize="16sp"
                        android:textAlignment="center"
                        android:textColor="@color/grey"
                        android:text="@string/description"
                        />

                    <android.support.v7.widget.CardView
                        android:id="@+id/user_profile_current_job_cardview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="@color/colorPrimary"
                        app:cardElevation="4dp"
                        android:layout_margin="12dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:padding="16dp">

                                <ImageView
                                    android:layout_width="36dp"
                                    android:layout_height="36dp"
                                    android:layout_marginRight="16dp"
                                    android:layout_gravity="center"
                                    android:background="@drawable/ic_work"
                                    android:contentDescription="User picture" />

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:textSize="16sp"
                                        android:textStyle="bold"
                                        android:textColor="@color/white"
                                        android:text="@string/user_profile_currently_works_at"/>

                                    <TextView
                                        android:id="@+id/user_profile_current_job_company_textview"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:textSize="14sp"
                                        android:textColor="@color/colorPrimaryLight"
                                        android:text="@string/company"/>

                                    <TextView
                                        android:id="@+id/user_profile_current_job_position_textview"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:textSize="14sp"
                                        android:textColor="@color/white"
                                        android:text="@string/position"/>

                                </LinearLayout>

                            </LinearLayout>

                        <TextView
                            android:id="@+id/user_profile_current_job_since_date_textview"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom|end"
                            android:layout_margin="4dp"
                            android:textSize="14sp"
                            android:textColor="@color/colorPrimaryLight"
                            android:text="@string/since_date"/>

                    </android.support.v7.widget.CardView>

                </LinearLayout>

            </android.support.v7.widget.CardView>

        <ProgressBar
            android:id="@+id/user_profile_loading_circular_progress"
            android:theme="@style/CircularProgress"
            style="@style/Widget.AppCompat.ProgressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="gone"/>

    </RelativeLayout>
</FrameLayout>
