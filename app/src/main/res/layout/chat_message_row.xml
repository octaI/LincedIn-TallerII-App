<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/chat_message_row_left_bubble"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="start"
        android:background="@color/colorPrimaryLight"
        android:layout_margin="2dp"
        android:padding="8dp"
        android:visibility="visible">
        <TextView
            android:id="@+id/chat_message_row_message_left_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:text="@string/message"
            android:textSize="16sp"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/chat_message_row_date_left_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/date"
            android:layout_gravity="end"
            android:textSize="12sp"
            android:textStyle="italic"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/chat_message_row_right_bubble"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="end"
        android:background="@color/lighterGrey"
        android:layout_margin="2dp"
        android:padding="8dp"
        android:visibility="gone">
        <TextView
            android:id="@+id/chat_message_row_message_right_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/message"
            android:layout_gravity="end"
            android:textSize="16sp"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/chat_message_row_date_right_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/date"
            android:layout_gravity="start"
            android:textSize="12sp"
            android:textStyle="italic"
            />
    </LinearLayout>

</FrameLayout>